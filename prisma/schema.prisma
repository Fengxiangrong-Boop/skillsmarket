// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Recommended for Vercel/Neon
}

model Category {
  id          String   @id
  name        String
  nameEn      String
  description String
  icon        String
  color       String
  skills      Skill[]
}

model Skill {
  id          String   @id @default(cuid())
  name        String
  nameEn      String?
  description String
  repository  String   @unique
  author      String
  stars       Int      @default(0)
  downloads   Int      @default(0)
  lastUpdate  DateTime
  tags        String[]
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  // SEO Fields
  slug        String   @unique
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
  @@index([description])
  @@index([slug])
}
